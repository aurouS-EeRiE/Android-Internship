<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#68EAED"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_a"
                android:gravity="center"
                android:textSize="35sp"
                android:layout_marginBottom="10sp"
                android:textColor="#000000">
            </TextView>
            <TextView
                android:id="@+id/score_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_marginBottom="10sp"
                android:textColor="#000000">
            </TextView>
            <Button
                android:id="@+id/one_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_point"
                android:background="#F40837"
                android:layout_marginBottom="10sp"
                android:textColor="#ffffff">
            </Button>
            <Button
                android:id="@+id/two_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2_point"
                android:background="#F40837"
                android:layout_marginBottom="10sp"
                android:textColor="#ffffff">
            </Button>
            <Button
                android:id="@+id/three_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_point"
                android:background="#F40837"
                android:textColor="#ffffff">
            </Button>
        </LinearLayout>

        <View
            android:id="@+id/verticalSeperatorHours"
            android:layout_width="2dp"
            android:layout_height="270sp"
            android:background="#000000"
            android:layout_marginTop="5sp"
            />

        <LinearLayout
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/team_b"
                android:textSize="35sp"
                android:gravity="center"

                android:layout_marginBottom="10sp"
                android:textColor="#000000">
            </TextView>
            <TextView
                android:id="@+id/score_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:textSize="35sp"
                android:gravity="center"
                android:layout_marginBottom="10sp"
                android:textColor="#000000">
            </TextView>
            <Button
                android:id="@+id/one_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_point"
                android:background="#F40837"
                android:layout_marginBottom="10sp"
                android:textColor="#ffffff">
            </Button>
            <Button
                android:id="@+id/two_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_2_point"
                android:background="#F40837"
                android:layout_marginBottom="10sp"
                android:textColor="#ffffff">
            </Button>
            <Button
                android:id="@+id/three_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_3_point"
                android:background="#F40837"
                android:textColor="#ffffff">
            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10sp">
        <Button
            android:id="@+id/reset"
            android:layout_width="wrap_content"
            android:text="@string/reset"
            android:layout_height="wrap_content"
            android:background="#090909"
            android:textColor="#FFFFFF"
            android:textSize="17sp">

        </Button>
    </LinearLayout>



</RelativeLayout>